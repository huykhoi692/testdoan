# ==================================================
# LangLeague Environment Variables Template
# ==================================================
# Copy this file to .env and fill in your values
# ==================================================

# ==================================================
# Database Configuration
# ==================================================
DB_HOST=localhost
DB_PORT=3307
DB_NAME=langleague
DB_USERNAME=langleague
DB_PASSWORD=change_this_password

# MySQL Root Password (for Docker Compose)
MYSQL_ROOT_PASSWORD=change_this_root_password

# ==================================================
# Spring Boot Configuration
# ==================================================
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# ==================================================
# Security - JWT Configuration
# ==================================================
# CRITICAL: Generate a new secret for production!
# Command: openssl rand -base64 64
# Minimum: 256 bits (44 chars), Recommended: 512 bits (88 chars)
JWT_BASE64_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_BASE64_STRING_MINIMUM_512_BITS

# JWT Token Expiration Settings (in seconds)
# Standard token validity: 86400 = 24 hours (recommended: 1-24 hours)
JWT_TOKEN_VALIDITY=86400

# Remember-me token validity: 2592000 = 30 days (recommended: 7-90 days)
JWT_REMEMBER_ME_VALIDITY=2592000

# ==================================================
# Email Configuration (SMTP)
# ==================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_FROM=noreply@langleague.com

# ==================================================
# OAuth2 Configuration (Optional)
# ==================================================
OAUTH2_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH2_GOOGLE_CLIENT_SECRET=your-google-client-secret

# ==================================================
# File Upload Configuration
# ==================================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ==================================================
# Production Configuration
# ==================================================
APP_BASE_URL=http://localhost:8080
