<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20251125000026-1" author="system">
        <createTable tableName="streak_milestone">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="milestone_days" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="reward_name" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="study_session_id" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20251125000026-2" author="system">
        <addForeignKeyConstraint baseColumnNames="study_session_id" baseTableName="streak_milestone"
            constraintName="fk_streak_milestone_study_session_id" referencedColumnNames="id" referencedTableName="study_session"/>
    </changeSet>

</databaseChangeLog>

