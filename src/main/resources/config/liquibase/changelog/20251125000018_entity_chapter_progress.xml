<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20251125000018-1" author="system">
        <createTable tableName="chapter_progress">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="percent" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="last_accessed" type="${datetimeType}">
                <constraints nullable="true"/>
            </column>
            <column name="completed" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="app_user_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="chapter_id" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20251125000018-2" author="system">
        <addForeignKeyConstraint baseColumnNames="app_user_id" baseTableName="chapter_progress"
            constraintName="fk_chapter_progress_app_user_id" referencedColumnNames="id" referencedTableName="app_user"/>
        <addForeignKeyConstraint baseColumnNames="chapter_id" baseTableName="chapter_progress"
            constraintName="fk_chapter_progress_chapter_id" referencedColumnNames="id" referencedTableName="chapter"/>
    </changeSet>

    <!-- Add index -->
    <changeSet id="20251125000018-3" author="system">
        <preConditions onFail="HALT">
            <not><indexExists indexName="idx_chapter_progress_user_chapter"/></not>
        </preConditions>
        <createIndex indexName="idx_chapter_progress_user_chapter" tableName="chapter_progress">
            <column name="app_user_id"/>
            <column name="chapter_id"/>
        </createIndex>
    </changeSet>

    <!-- Add version column for optimistic locking -->
    <changeSet id="20251125000018-4-version" author="system">
        <preConditions onFail="HALT">
            <not><columnExists tableName="chapter_progress" columnName="version"/></not>
        </preConditions>
        <comment>Add version column for optimistic locking to prevent race conditions</comment>
        <addColumn tableName="chapter_progress">
            <column name="version" type="bigint" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <!-- Performance indexes for analytics -->
    <changeSet id="20251125000018-5-perf" author="performance">
        <preConditions onFail="HALT">
            <not><indexExists indexName="idx_chapter_progress_analytics" tableName="chapter_progress"/></not>
        </preConditions>
        <createIndex indexName="idx_chapter_progress_analytics" tableName="chapter_progress">
            <column name="chapter_id"/>
            <column name="completed"/>
            <column name="app_user_id"/>
        </createIndex>
        <comment>Performance: For chapter completion rate and drop-off analysis</comment>
    </changeSet>

    <changeSet id="20251125000018-6-perf" author="performance">
        <preConditions onFail="HALT">
            <not><indexExists indexName="idx_chapter_progress_user" tableName="chapter_progress"/></not>
        </preConditions>
        <createIndex indexName="idx_chapter_progress_user" tableName="chapter_progress">
            <column name="app_user_id"/>
            <column name="last_accessed"/>
        </createIndex>
        <comment>Performance: For user progress tracking and recent activity</comment>
    </changeSet>

</databaseChangeLog>

