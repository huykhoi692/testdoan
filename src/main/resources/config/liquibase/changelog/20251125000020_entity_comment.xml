<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20251125000020-1" author="system">
        <createTable tableName="comment">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="content" type="${clobType}">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="${datetimeType}">
                <constraints nullable="true"/>
            </column>
            <column name="app_user_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="chapter_id" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20251125000020-2" author="system">
        <addForeignKeyConstraint baseColumnNames="app_user_id" baseTableName="comment"
            constraintName="fk_comment_app_user_id" referencedColumnNames="id" referencedTableName="app_user"/>
        <addForeignKeyConstraint baseColumnNames="chapter_id" baseTableName="comment"
            constraintName="fk_comment_chapter_id" referencedColumnNames="id" referencedTableName="chapter"/>
    </changeSet>

    <!-- Add index -->
    <changeSet id="20251125000020-3" author="system">
        <preConditions onFail="HALT">
            <not><indexExists indexName="idx_comment_chapter_id"/></not>
        </preConditions>
        <createIndex indexName="idx_comment_chapter_id" tableName="comment">
            <column name="chapter_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

