<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20251125000024-1" author="system">
        <createTable tableName="study_session">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="started_at" type="${datetimeType}">
                <constraints nullable="true"/>
            </column>
            <column name="ended_at" type="${datetimeType}">
                <constraints nullable="true"/>
            </column>
            <column name="duration_minutes" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="app_user_id" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20251125000024-2" author="system">
        <addForeignKeyConstraint baseColumnNames="app_user_id" baseTableName="study_session" 
            constraintName="fk_study_session_app_user_id" referencedColumnNames="id" referencedTableName="app_user"/>
    </changeSet>

</databaseChangeLog>

