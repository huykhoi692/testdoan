<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20251125000023-1" author="system">
        <createTable tableName="learning_streak">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="current_streak" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="longest_streak" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="last_study_date" type="${datetimeType}">
                <constraints nullable="true"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="app_user_id" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20251125000023-2" author="system">
        <addForeignKeyConstraint baseColumnNames="app_user_id" baseTableName="learning_streak"
            constraintName="fk_learning_streak_app_user_id" referencedColumnNames="id" referencedTableName="app_user"/>
    </changeSet>

    <!-- Add index -->
    <changeSet id="20251125000023-3" author="system">
        <preConditions onFail="HALT">
            <not><indexExists indexName="idx_learning_streak_app_user_id"/></not>
        </preConditions>
        <createIndex indexName="idx_learning_streak_app_user_id" tableName="learning_streak">
            <column name="app_user_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

