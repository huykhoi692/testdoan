<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20251125000015-1" author="system">
        <createTable tableName="user_vocabulary">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="remembered" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="is_memorized" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="last_reviewed" type="${datetimeType}">
                <constraints nullable="true"/>
            </column>
            <column name="review_count" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="ease_factor" type="integer" defaultValue="250">
                <constraints nullable="true"/>
            </column>
            <column name="interval_days" type="integer" defaultValue="0">
                <constraints nullable="true"/>
            </column>
            <column name="next_review_date" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="app_user_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="word_id" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20251125000015-2" author="system">
        <addForeignKeyConstraint baseColumnNames="app_user_id" baseTableName="user_vocabulary"
            constraintName="fk_user_vocabulary_app_user_id" referencedColumnNames="id" referencedTableName="app_user"/>
        <addForeignKeyConstraint baseColumnNames="word_id" baseTableName="user_vocabulary"
            constraintName="fk_user_vocabulary_word_id" referencedColumnNames="id" referencedTableName="word"/>
    </changeSet>

    <!-- Add indexes -->
    <changeSet id="20251125000015-3" author="system">
        <preConditions onFail="HALT">
            <not><indexExists indexName="idx_user_vocabulary_app_user_id"/></not>
        </preConditions>
        <createIndex indexName="idx_user_vocabulary_app_user_id" tableName="user_vocabulary">
            <column name="app_user_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="20251125000015-4" author="system">
        <preConditions onFail="HALT">
            <not><indexExists indexName="idx_user_vocabulary_next_review"/></not>
        </preConditions>
        <createIndex indexName="idx_user_vocabulary_next_review" tableName="user_vocabulary">
            <column name="next_review_date"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

