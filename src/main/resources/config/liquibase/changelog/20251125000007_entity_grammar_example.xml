<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20251125000007-1" author="system">
        <createTable tableName="grammar_example">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="example_text" type="${clobType}">
                <constraints nullable="true"/>
            </column>
            <column name="translation" type="${clobType}">
                <constraints nullable="true"/>
            </column>
            <column name="explanation" type="${clobType}">
                <constraints nullable="true"/>
            </column>
            <column name="grammar_id" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20251125000007-2" author="system">
        <addForeignKeyConstraint
            baseColumnNames="grammar_id"
            baseTableName="grammar_example"
            constraintName="fk_grammar_example_grammar_id"
            referencedColumnNames="id"
            referencedTableName="grammar"/>
    </changeSet>

</databaseChangeLog>

