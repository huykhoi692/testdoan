<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20251125000027-1" author="system">
        <createTable tableName="notification">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="title" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="message" type="${clobType}">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
            <column name="is_read" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="${datetimeType}">
                <constraints nullable="true"/>
            </column>
            <column name="read_at" type="${datetimeType}">
                <constraints nullable="true"/>
            </column>
            <column name="link_url" type="varchar(500)">
                <constraints nullable="true"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20251125000027-2" author="system">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="notification"
            constraintName="fk_notification_user_id" referencedColumnNames="id" referencedTableName="jhi_user"/>
    </changeSet>

    <changeSet id="20251125000027-3" author="system">
        <preConditions onFail="HALT">
            <not><indexExists indexName="idx_notification_user_read" tableName="notification"/></not>
        </preConditions>
        <createIndex indexName="idx_notification_user_read" tableName="notification">
            <column name="user_id"/>
            <column name="is_read"/>
            <column name="created_at"/>
        </createIndex>
    </changeSet>

    <changeSet id="20251125000027-4" author="system">
        <preConditions onFail="HALT">
            <not><indexExists indexName="idx_notification_created" tableName="notification"/></not>
        </preConditions>
        <createIndex indexName="idx_notification_created" tableName="notification">
            <column name="created_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

