<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20251125000016-1" author="system">
        <createTable tableName="user_grammar">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="remembered" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="is_memorized" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="last_reviewed" type="${datetimeType}">
                <constraints nullable="true"/>
            </column>
            <column name="review_count" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="app_user_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="grammar_id" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20251125000016-2" author="system">
        <addForeignKeyConstraint baseColumnNames="app_user_id" baseTableName="user_grammar"
            constraintName="fk_user_grammar_app_user_id" referencedColumnNames="id" referencedTableName="app_user"/>
        <addForeignKeyConstraint baseColumnNames="grammar_id" baseTableName="user_grammar"
            constraintName="fk_user_grammar_grammar_id" referencedColumnNames="id" referencedTableName="grammar"/>
    </changeSet>

    <!-- Add index -->
    <changeSet id="20251125000016-3" author="system">
        <preConditions onFail="HALT">
            <not><indexExists indexName="idx_user_grammar_app_user_id"/></not>
        </preConditions>
        <createIndex indexName="idx_user_grammar_app_user_id" tableName="user_grammar">
            <column name="app_user_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

