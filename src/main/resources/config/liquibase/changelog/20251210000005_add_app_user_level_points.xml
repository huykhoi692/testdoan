<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- ========================================= -->
    <!-- ADD LEVEL AND POINTS TO APP_USER         -->
    <!-- ========================================= -->

    <changeSet id="20251210000005-1" author="system">
        <preConditions onFail="MARK_RAN">
            <not><columnExists tableName="app_user" columnName="level"/></not>
        </preConditions>
        <comment>Add level column to app_user table</comment>
        <addColumn tableName="app_user">
            <column name="level" type="integer" defaultValueNumeric="0">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="20251210000005-2" author="system">
        <preConditions onFail="MARK_RAN">
            <not><columnExists tableName="app_user" columnName="points"/></not>
        </preConditions>
        <comment>Add points column to app_user table</comment>
        <addColumn tableName="app_user">
            <column name="points" type="integer" defaultValueNumeric="0">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="20251210000005-3" author="system">
        <preConditions onFail="MARK_RAN">
            <not><columnExists tableName="app_user" columnName="deleted"/></not>
        </preConditions>
        <comment>Add deleted column to app_user table for soft delete</comment>
        <addColumn tableName="app_user">
            <column name="deleted" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>

