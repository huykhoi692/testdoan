<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity UserBook.
    -->
    <changeSet id="20251205000002-1" author="jhipster">
        <createTable tableName="user_book">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="saved_at" type="${datetimeType}">
                <constraints nullable="false" />
            </column>
            <column name="learning_status" type="varchar(50)">
                <constraints nullable="false" />
            </column>
            <column name="current_chapter_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="last_accessed_at" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="progress_percentage" type="double" defaultValueNumeric="0.0">
                <constraints nullable="true" />
            </column>
            <column name="is_favorite" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true" />
            </column>
            <column name="app_user_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="book_id" type="bigint">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <!-- Add foreign key constraints -->
    <changeSet id="20251205000002-2" author="jhipster">
        <addForeignKeyConstraint baseColumnNames="app_user_id"
                                 baseTableName="user_book"
                                 constraintName="fk_user_book__app_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="app_user"/>

        <addForeignKeyConstraint baseColumnNames="book_id"
                                 baseTableName="user_book"
                                 constraintName="fk_user_book__book_id"
                                 referencedColumnNames="id"
                                 referencedTableName="book"/>
    </changeSet>

    <!-- Add unique constraint to prevent duplicate saves -->
    <changeSet id="20251205000002-3" author="jhipster">
        <addUniqueConstraint columnNames="app_user_id, book_id"
                             constraintName="ux_user_book__user_book"
                             tableName="user_book"/>
    </changeSet>

    <!-- Add indexes for performance -->
    <changeSet id="20251205000002-4" author="jhipster">
        <createIndex indexName="idx_user_book_app_user" tableName="user_book">
            <column name="app_user_id"/>
        </createIndex>
        <createIndex indexName="idx_user_book_book" tableName="user_book">
            <column name="book_id"/>
        </createIndex>
        <createIndex indexName="idx_user_book_status" tableName="user_book">
            <column name="learning_status"/>
        </createIndex>
        <createIndex indexName="idx_user_book_favorite" tableName="user_book">
            <column name="is_favorite"/>
        </createIndex>
        <createIndex indexName="idx_user_book_last_accessed" tableName="user_book">
            <column name="last_accessed_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

