<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity UserChapter.
    -->
    <changeSet id="20251205000003-1" author="jhipster">
        <createTable tableName="user_chapter">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="saved_at" type="${datetimeType}">
                <constraints nullable="false" />
            </column>
            <column name="learning_status" type="varchar(50)">
                <constraints nullable="false" />
            </column>
            <column name="last_accessed_at" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="is_favorite" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true" />
            </column>
            <column name="notes" type="varchar(2000)">
                <constraints nullable="true" />
            </column>
            <column name="tags" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="app_user_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="chapter_id" type="bigint">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <!-- Add foreign key constraints -->
    <changeSet id="20251205000003-2" author="jhipster">
        <addForeignKeyConstraint baseColumnNames="app_user_id"
                                 baseTableName="user_chapter"
                                 constraintName="fk_user_chapter__app_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="app_user"/>

        <addForeignKeyConstraint baseColumnNames="chapter_id"
                                 baseTableName="user_chapter"
                                 constraintName="fk_user_chapter__chapter_id"
                                 referencedColumnNames="id"
                                 referencedTableName="chapter"/>
    </changeSet>

    <!-- Add unique constraint to prevent duplicate saves -->
    <changeSet id="20251205000003-3" author="jhipster">
        <addUniqueConstraint columnNames="app_user_id, chapter_id"
                             constraintName="ux_user_chapter__user_chapter"
                             tableName="user_chapter"/>
    </changeSet>

    <!-- Add indexes for performance -->
    <changeSet id="20251205000003-4" author="jhipster">
        <createIndex indexName="idx_user_chapter_app_user" tableName="user_chapter">
            <column name="app_user_id"/>
        </createIndex>
        <createIndex indexName="idx_user_chapter_chapter" tableName="user_chapter">
            <column name="chapter_id"/>
        </createIndex>
        <createIndex indexName="idx_user_chapter_status" tableName="user_chapter">
            <column name="learning_status"/>
        </createIndex>
        <createIndex indexName="idx_user_chapter_favorite" tableName="user_chapter">
            <column name="is_favorite"/>
        </createIndex>
        <createIndex indexName="idx_user_chapter_last_accessed" tableName="user_chapter">
            <column name="last_accessed_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

